<span id="{{index}}nodeBox" class="nodeBox btn-group btn-group-vertical">
	<button id="{{index}}node" 
	class="btn 
	{{#if node.completed}}
		{{#if node.valid }}
			btn-success
		{{else}}
			btn-danger
		{{/if}}
	{{else}}btn-default{{/if}}
	node" 
	{{#unless node.mutable}}disabled="disabled"{{/unless}}>
		{{#if node.value}}{{node.value}}{{/if}}
	</button>

	{{#if node.op}}
	<select id="{{index}}op" class="form-control op"
	{{#unless node.op.mutable}}disabled="disabled"{{/unless}}>
		<option value=""></option>
        <option value="+">+</option>
        <option value="-">-</option>
        <option value="×">×</option>
        <option value="÷">÷</option>
	</select>
	{{/if}}
</span>